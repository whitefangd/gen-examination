{
  "database": {
    "rules": "/firebase/database.rules.json"
  },
  "firestore": {
    "rules": "/firebase/firestore.rules",
    "indexes": "/firebase/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"functions\" run lint",
      "npm --prefix \"functions\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "/firebase/storage.rules"
  }
}
